<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Edit Comment</h1>
    <%= form_for @comment do |f| %>

      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control' %>

      <%= f.submit "Post comment", class: 'btn btn-primary' %>

    <% end %>
  </div>
</div>